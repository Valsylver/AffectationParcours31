<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
   http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/tx
   http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="hibernateProperties">
			<bean
				class="org.springframework.beans.factory.config.PropertiesFactoryBean">
				<property name="properties">
					<props>
						<prop key="hibernate.dialect">org.hibernate.dialect.DerbyDialect</prop>
						<prop key="hibernate.hbm2ddl.auto">update</prop>
					</props>
				</property>
			</bean>
		</property>
		<property name="dataSource" ref="dataSource" />
		<property name="packagesToScan" value="fr.affectation.domain.superuser, fr.affectation.domain.specialization, fr.affectation.domain.student" />
	</bean>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="org.apache.derby.jdbc.EmbeddedDriver" />
		<property name="url" value="jdbc:derby:target/testdb;create=true" />
		<property name="username" value="" />
		<property name="password" value="" />
	</bean>
	
	<bean id="dataSourceAgap" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/affectation" />
		<property name="username" value="root" />
		<property name="password" value="lol" />
	</bean>
	
	<bean class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
		<constructor-arg ref="dataSourceAgap" />
	</bean>
	
	<bean class="org.springframework.jdbc.core.JdbcTemplate">
		<constructor-arg ref="dataSourceAgap" />
	</bean>
	
	<tx:annotation-driven transaction-manager="transactionManager" />
	
	<bean class="fr.affectation.service.specialization.SpecializationServiceImpl" />
	
	<bean class="fr.affectation.service.superuser.SuperUserServiceImpl" />
	
	<bean class="fr.affectation.service.authentication.AuthenticationServiceImpl" />
	
	<bean class="fr.affectation.service.agap.AgapServiceImpl" />
	
	<bean class="fr.affectation.service.responsible.ResponsibleServiceImpl" />
	
	<bean class="fr.affectation.service.student.StudentServiceImpl" />
	
	<bean class="fr.affectation.service.exclusion.ExclusionServiceImpl" />
	
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
    	<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	
	<bean class="fr.affectation.service.validation.ValidationServiceImpl" />
	
	<bean class="fr.affectation.service.choice.ChoiceServiceImpl" />
	
	<bean class="fr.affectation.service.documents.DocumentServiceImpl" />

</beans>